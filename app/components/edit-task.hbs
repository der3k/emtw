{{#let
  (hash
    AddComment=(component
      "add-comment"
      onSubmit=this.addComment
      onClose=(fn (mut this.show.addComment) false)
    )
    EditDescription=(component
      "edit-description"
      content=this.args.task.description
      onSubmit=this.updateDescription
      onClose=(fn (mut this.show.editDescription) false)
    )
    show=this.show
  )
  as |command|
}}
  {{yield command}}
{{/let}}
